function filterArray(testArray) {
    let index = -1,
        arrLength = testArray ? testArray.length : 0,
        resIndex = -1,
        result = [];

    while (++index < arrLength) {
        let value = testArray[index];

        if (value) {
            result[++resIndex] = value;
        }
    }

    return result;
}
console.log(filterArray([NaN, 0, 15, false, -22, '',undefined, 47, null]));
