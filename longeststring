function longest_str_in_array(arr)
  {
    let max_str = arr[0].length;
    let ans = arr[0];
    for (let i = 1; i < arr.length; i++) {
        let maxi = arr[i].length;
        if (maxi > max_str) {
            ans = arr[i];
            max_str = maxi;
        }
    }
    return ans;
}
console.log(longest_str_in_array(["asdf", "sd", "something", "right"]));
